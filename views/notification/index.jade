extends ../layout

block content
  .page-header
    h3 Notifications
    div
      ul
        each n in notifications
          h3 Email: #{n.sender.email}
          a.btn.btn-default(href='/notification/#{n._id}', role='button') View notification »
          br
          if needsSignature && type === 'request'
            if n.status === 'unread'
              a.btn.btn-default(href='/verification/#{n._id}', role='button') Needs signature »
          if n.status === 'read'
            br
            p Notification has been read
          each r in n.rules
            p Rule: #{r}
          p Transaction: #{n.transaction}
          hr
